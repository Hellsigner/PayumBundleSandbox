{% extends "AcmePaymentBundle::layout.html.twig" %}

{% block title %}
    {{ pagetitle|default('Get token') }}
{% endblock %}

{% block content %}
    <form method="{{ form_method|default('POST') }}"
          {% if form_action|default %} action="{{ form_action }}" {% endif %} >
        {% if form|default %}
            {{ form_widget(form) }}
        {% endif %}
        <input type="submit" value="Get token" />
    </form>
{% endblock %}

{% set code = code(_self) %}